{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "synapse",
  "version": "0.5.3",
  "identifier": "com.synapse.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "synapse",
        "width": 1200,
        "height": 700,
        "minWidth": 1200,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/rodrigueslucas062/synapse-desktop/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      },
      "privateKey": "myapp.key",
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFDMTY5OEQxNEU2NDY0QjIKUldTeVpHUk8wWmdXcklEbjJnRjhTcmtWWlo0b1V5R2pSaUI4UXplbkcvTzgvaUVKclJlbDVSMUsK"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
